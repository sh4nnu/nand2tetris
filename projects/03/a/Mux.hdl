/** 
 * Multiplexor:
 * out = a if sel == 0
 *       b otherwise
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    // Logic: (a && !sel) || ( b && sel)
    Not(in = sel , out = notsel);
    And( a = a, b = notsel, out = op1);
    And( a = b, b = sel, out =op2);
    Or ( a = op1, b = op2, out = out);
    
}
